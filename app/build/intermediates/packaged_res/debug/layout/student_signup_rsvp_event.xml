<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/login_background"
        android:layout_width="0dp"
        android:layout_height="185dp"
        android:background="@drawable/pic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/rsvpEventName"
        android:layout_width="135dp"
        android:layout_height="48dp"
        android:drawablePadding="8dp"
        android:fontFamily="sans-serif-black"
        android:gravity="center_vertical"
        android:text="@string/event_title"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.159"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_background"
        app:layout_constraintVertical_bias="0.094" />

    <TextView
        android:id="@+id/rsvpEventNameShow"
        android:layout_width="190dp"
        android:layout_height="48dp"
        android:fontFamily="sans-serif-black"
        android:gravity="center|center_vertical"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/rsvpEventName"
        app:layout_constraintTop_toBottomOf="@+id/login_background"
        app:layout_constraintVertical_bias="0.094" />

    <TextView
        android:id="@+id/rsvpEventContentShow"
        android:layout_width="190dp"
        android:layout_height="135dp"
        android:fontFamily="sans-serif-black"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/rsvpEventContent"
        app:layout_constraintTop_toBottomOf="@+id/rsvpEventNameShow"
        app:layout_constraintVertical_bias="0.081" />

    <TextView
        android:id="@+id/rsvpEventOccupancyShow"
        android:layout_width="100dp"
        android:layout_height="48dp"
        android:fontFamily="sans-serif-black"
        android:gravity="center|center_vertical"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/rsvpEventOccupancy"
        app:layout_constraintTop_toBottomOf="@+id/rsvpEventContentShow"
        app:layout_constraintVertical_bias="0.177" />

    <TextView
        android:id="@+id/rsvpEventContent"
        android:layout_width="135dp"
        android:layout_height="48dp"
        android:fontFamily="sans-serif-black"
        android:gravity="center_vertical"
        android:text="@string/event_content"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.159"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rsvpEventNameShow"
        app:layout_constraintVertical_bias="0.064" />

    <TextView
        android:id="@+id/rsvpEventOccupancy"
        android:layout_width="180dp"
        android:layout_height="48dp"
        android:fontFamily="sans-serif-black"
        android:gravity="center_vertical"
        android:text="@string/event_s_occupancy"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.19"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rsvpEventContentShow"
        app:layout_constraintVertical_bias="0.177" />

    <Button
        android:id="@+id/btnStudentRSVPEventBack"
        android:layout_width="300dp"
        android:layout_height="48dp"
        android:backgroundTint="#3CC1C1C1"
        android:fontFamily="sans-serif-medium"
        android:onClick="onClick"
        android:text="@string/back"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold"
        app:cornerRadius="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnStudentRSVPEvent"
        app:layout_constraintVertical_bias="0.15" />

    <Button
        android:id="@+id/btnStudentRSVPEvent"
        android:layout_width="300dp"
        android:layout_height="48dp"
        android:backgroundTint="#5BFFC107"
        android:fontFamily="sans-serif-medium"
        android:onClick="onClick"
        android:text="@string/sign_up"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold"
        app:cornerRadius="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rsvpEventOccupancy"
        app:layout_constraintVertical_bias="0.277" />


</androidx.constraintlayout.widget.ConstraintLayout>