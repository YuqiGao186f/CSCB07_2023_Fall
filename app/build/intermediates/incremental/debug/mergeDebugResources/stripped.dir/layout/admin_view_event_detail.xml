<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/detailedEventTitle"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:fontFamily="sans-serif-medium"
        android:gravity="center_vertical"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/adminViewEventTitle"
        app:layout_constraintTop_toBottomOf="@+id/adminViewEventsBanner"
        app:layout_constraintVertical_bias="0.05" />

    <TextView
        android:id="@+id/adminViewEventOccupancy"
        android:layout_width="100dp"
        android:layout_height="38dp"
        android:fontFamily="sans-serif-black"
        android:gravity="center_vertical"
        android:text="@string/participants"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.151"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/detailedEventContent"
        app:layout_constraintVertical_bias="0.032" />

    <TextView
        android:id="@+id/detailedEventOccupancy"
        android:layout_width="180dp"
        android:layout_height="38dp"
        android:fontFamily="sans-serif-medium"
        android:gravity="center_vertical"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.404"
        app:layout_constraintStart_toEndOf="@+id/adminViewEventOccupancy"
        app:layout_constraintTop_toBottomOf="@+id/detailedEventContent"
        app:layout_constraintVertical_bias="0.032" />

    <TextView
        android:id="@+id/adminViewEventAvgRate"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:fontFamily="sans-serif-black"
        android:gravity="center_vertical"
        android:text="@string/rate_average"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.152"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/adminViewEventCount"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/detailedEventCount"
        android:layout_width="180dp"
        android:layout_height="38dp"
        android:fontFamily="sans-serif-medium"
        android:gravity="center_vertical"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toEndOf="@+id/adminViewEventCount"
        app:layout_constraintTop_toBottomOf="@+id/detailedEventOccupancy"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/detailedEventContent"
        android:layout_width="200dp"
        android:layout_height="130dp"
        android:fontFamily="sans-serif-medium"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/adminViewEventContent"
        app:layout_constraintTop_toBottomOf="@+id/detailedEventTitle"
        app:layout_constraintVertical_bias="0.03" />

    <TextView
        android:id="@+id/detailedEventAvgRate"
        android:layout_width="180dp"
        android:layout_height="38dp"
        android:fontFamily="sans-serif-medium"
        android:gravity="center_vertical"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toEndOf="@+id/adminViewEventCount"
        app:layout_constraintTop_toBottomOf="@+id/detailedEventCount"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/adminViewEventCount"
        android:layout_width="100dp"
        android:layout_height="38dp"
        android:fontFamily="sans-serif-black"
        android:gravity="center_vertical"
        android:text="@string/rate_count"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.15"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/adminViewEventOccupancy"
        app:layout_constraintVertical_bias="0.0" />

    <ListView
        android:id="@+id/studentCommentForEvent"
        android:layout_width="320dp"
        android:layout_height="130dp"
        android:scrollbars="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/adminViewEventComments"
        app:layout_constraintVertical_bias="0.083" />

    <TextView
        android:id="@+id/adminViewEventComments"
        android:layout_width="200dp"
        android:layout_height="38dp"
        android:fontFamily="sans-serif-black"
        android:gravity="center_vertical"
        android:text="@string/comments_from_student"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.218"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/adminViewEventAvgRate"
        app:layout_constraintVertical_bias="0.11" />

    <TextView
        android:id="@+id/adminViewEventContent"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:fontFamily="sans-serif-black"
        android:text="@string/content"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.15"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/adminViewEventTitle"
        app:layout_constraintVertical_bias="0.026" />

    <TextView
        android:id="@+id/adminViewEventTitle"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:fontFamily="sans-serif-black"
        android:gravity="center_vertical"
        android:text="@string/title"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.15"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/adminViewEventsBanner"
        app:layout_constraintVertical_bias="0.05" />

    <Button
        android:id="@+id/btnAdminViewDetailedEventBack"
        android:layout_width="300dp"
        android:layout_height="48dp"
        android:backgroundTint="#97CFCFCF"
        android:fontFamily="sans-serif-medium"
        android:onClick="onClick"
        android:text="@string/back"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold"
        app:cornerRadius="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/studentCommentForEvent"
        app:layout_constraintVertical_bias="0.37" />

    <TextView
        android:id="@+id/adminViewEventsBanner"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:background="#408BC34A"
        android:gravity="center"
        android:text="@string/event_details"
        android:textColor="#000000"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>