<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/login_background"
        android:layout_width="407dp"
        android:layout_height="145dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/pic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/rsvpEventName"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:layout_marginTop="210dp"
        android:drawablePadding="8dp"
        android:fontFamily="sans-serif-black"
        android:text="Event Name:"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.154"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/rsvpEventNameShow"
        android:layout_width="190dp"
        android:layout_height="80dp"
        android:layout_marginStart="12dp"
        android:drawablePadding="8dp"
        android:fontFamily="sans-serif-black"
        android:textAlignment="textStart"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/rsvpEventName"
        app:layout_constraintTop_toTopOf="@+id/rsvpEventName" />

    <TextView
        android:id="@+id/rsvpEventContentShow"
        android:layout_width="190dp"
        android:layout_height="100dp"
        android:layout_marginStart="12dp"
        android:drawablePadding="8dp"
        android:fontFamily="sans-serif-black"
        android:textAlignment="textStart"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/rsvpEventContent"
        app:layout_constraintTop_toTopOf="@+id/rsvpEventContent" />

    <TextView
        android:id="@+id/rsvpEventOccupancyShow"
        android:layout_width="100dp"
        android:layout_height="44dp"
        android:layout_marginStart="12dp"
        android:drawablePadding="8dp"
        android:fontFamily="sans-serif-black"
        android:textAlignment="textStart"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/rsvpEventOccupancy"
        app:layout_constraintTop_toTopOf="@+id/rsvpEventOccupancy" />

    <TextView
        android:id="@+id/rsvpEventContent"
        android:layout_width="135dp"
        android:layout_height="30dp"
        android:layout_marginTop="348dp"
        android:drawablePadding="8dp"
        android:fontFamily="sans-serif-black"
        android:text="Event Content:"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.152"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/rsvpEventOccupancy"
        android:layout_width="180dp"
        android:layout_height="30dp"
        android:layout_marginTop="488dp"
        android:drawablePadding="8dp"
        android:fontFamily="sans-serif-black"
        android:text="Event's Occupancy:"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.151"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnStudentRSVPEventBack"
        android:layout_width="180dp"
        android:layout_height="56dp"
        android:layout_marginBottom="44dp"
        android:backgroundTint="#FFEB3B"
        android:fontFamily="sans-serif-medium"
        android:onClick="onClick"
        android:text="back"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold"
        app:cornerRadius="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnStudentRSVPEvent"
        android:layout_width="180dp"
        android:layout_height="56dp"
        android:layout_marginBottom="112dp"
        android:backgroundTint="#FF9800"
        android:fontFamily="sans-serif-medium"
        android:onClick="onClick"
        android:text="Sign Up"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold"
        app:cornerRadius="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>